<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <link rel="stylesheet" href="/stylesheets/bootstrapModificado.css" />
    <link rel="stylesheet" href="/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="/stylesheets/estilos.css" />

    <title>Inicio</title>
    <link rel="shortcut icon" href="/images/icono1.png" />
</head>

<body>
    <%- include("./partials/encabezado_publico") %>

        <div class="container">
            <div class="row bg-white align-items-center no-gutters m-0 mt-2">
                <div class="col-auto">
                    <img src="/images/fondo.png" id="imgFondo" alt="img_fondo" />
                </div>
                <div class="col">
                    <div class="section py-1">
                        <h1>Inicio de Sesión</h1>
                        <h3>Ingresa tus credenciales de administrador:</h3>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-sm-6 offset-3">

                    <!-- mensaje de de error en caso de que los datos ingresados sean invalidos -->
                    <% if (mensaje && mensaje.length > 0) { %>
                        <h4>
                            <span class="bi bi-info-circle"></span>
                            <%=mensaje%>
                        </h4>
                    <% } %>

                    <!-- Formulario ingreso -->
                    <form action="/procesar_inicio" method="POST">
                        <fieldset class="my-3">
                            <legend>Datos de usuario</legend>

                            <!-- campo de correo -->
                            <div class="my-3">
                                <label class="ingreso" for="correo">Correo</label>
                                <br />
                                <input type="email" class="form-control mt-2" id="correo" name="correo" placeholder="Correo electrónico" required autofocus />
                            </div>

                            <!-- campo contraseña -->
                            <div class="my-3">
                                <label class="ingreso" for="contrasena">Contraseña</label>
                                <br />
                                <input type="password" class="form-control mt-2" id="contrasena" name="contrasena" placeholder="Contraseña" required />
                            </div>

                            <!-- boton enviar -->
                            <div>
                                <button type="submit" class="btn btn-primary mb-2">Continuar</button>
                            </div>

                        </fieldset>
                    </form>
                </div>
            </div>
        </div>

    <%- include ("./partials/pie") %>
    <script src="/javascripts/jquery-3.5.1.min.js"></script>
    <script src="/javascripts/popper.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/script.js"></script>
</body>

</html>